{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./",
    "removeComments": true,
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
  ]
}