{
    "manifest_version": 3,
    "name": "Dark mode",
    "description": "Dark mode extension for Chrome",
    "version": "2.0.0",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_icon": {
            "16": "src/images/moon-16.png",
            "32": "src/images/moon-32.png",
            "48": "src/images/moon-48.png",
            "128": "src/images/moon-128.png"
        },
        "default_title": "Switch to dark mode"
    },
    "background": {
        "service_worker": "background.js"
    },
    "minimum_chrome_version": "102",
    "omnibox": {
        "keyword": "api"
    },
    "content_scripts": [
        {
            "js": ["set-dark-mode.js"],
            "css": ["src/styles/dark-mode.css"],
            "matches": ["<all_urls>"]
        }
    ]
}